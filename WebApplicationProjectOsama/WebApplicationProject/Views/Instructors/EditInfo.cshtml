<form action="@Url.Action("EditInfo", "Instructors")" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <input type="hidden" name="InstructorId" value="@Model.InstructorId" />
        <label for="Name">Name</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required />
    </div>

    <div class="form-group">
        <label for="LatestQualification">Latest Qualification</label>
        <input type="text" class="form-control" id="LatestQualification" name="LatestQualification" value="@Model.LatestQualification" />
    </div>

    <div class="form-group">
        <label for="ExpertiseArea">Expertise Area</label>
        <input type="text" class="form-control" id="ExpertiseArea" name="ExpertiseArea" value="@Model.ExpertiseArea" />
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
