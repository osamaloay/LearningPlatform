@model WebApplicationProject.Models.PersonalizationProfile

<div id="deleteModal_@Model.Sid-@Model.OrderNumber" class="delete-modal" style="display: none;">
    <div class="modal-content">
        <h2>Are you sure you want to delete this profile?</h2>
        <form method="post" asp-action="Delete" asp-controller="Personalization">
            @Html.AntiForgeryToken()
            <input type="hidden" name="sid" value="@Model.Sid" />
            <input type="hidden" name="orderNumber" value="@Model.OrderNumber" />
            <button type="submit" class="btn btn-danger">Yes, Delete</button>
            <button type="button" class="btn btn-secondary" onclick="closeDeleteConfirmation(@Model.Sid, @Model.OrderNumber)">Cancel</button>
        </form>
    </div>
</div>