@model WebApplicationProject.Models.Admin

@{
    var title = ViewData["Title"]?.ToString() ?? "Default Admin Home Title"; // Default value if null
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        /* Discord-inspired color scheme */
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #5865F2; /* Discord blue */
            color: #FFFFFF;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .navbar {
            background-color: #40444b;
            padding: 10px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.5);
        }

            .navbar .admin-info {
                font-size: 20px;
                font-weight: bold;
                color: #7289DA;
                display: flex;
                align-items: center;
            }

        .card h5 {
            background-color: #7289da; /* Discord Blue */
            color: #fff;
            padding: 10px;
            margin: 0;
            border-radius: 10px;
        }

                .navbar .admin-info span {
                    margin-left: 10px;
                    font-size: 18px;
                    color: #FFFFFF;
                }

            .navbar .toggle-button {
                color: #FFFFFF;
                background: none;
                border: none;
                font-size: 24px;
                cursor: pointer;
            }

        .content {
            display: flex;
            flex: 1;
        }

        .sidebar {
            width: 250px;
            background-color: #40444b;
            padding: 15px;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.5);
            transition: transform 0.3s ease;
            transform: translateX(0);
        }

            .sidebar.hidden {
                transform: translateX(-100%);
            }

            .sidebar h3 {
                color: #7289DA;
            }

            .sidebar a {
                display: block;
                color: #FFFFFF;
                text-decoration: none;
                margin: 10px 0;
                padding: 10px;
                border-radius: 5px;
            }

                .sidebar a:hover {
                    background-color: #7289DA;
                }

        .main-content {
            flex: 1;
            padding: 20px;
            overflow: hidden;
        }

            .main-content h1 {
                color: #FFFFFF;
            }

            .main-content .card {
                background-color: #40444b;
                border: none;
                border-radius: 10px;
                color: #FFFFFF;
                margin-bottom: 20px;
            }

        .footer {
            background-color: #40444b;
            padding: 10px;
            text-align: center;
            color: #FFFFFF;
        }
    </style>
</head>
<body>
   
    <!-- Navbar -->
    <div class="navbar">
        <button class="toggle-button" onclick="toggleSidebar()">☰</button>
        <div class="admin-info">
            Admin: <span>@Model.AidNavigation.Username (#@Model.Aid)</span>
        </div>
        <div class="menu">
            <a href="/Account/Profile" class="text-white">Profile</a>
            <a href="/Account/Logout" class="text-white">Logout</a>
        </div>
    </div>

    <!-- Content -->
    <div class="content">
        <!-- Sidebar -->
        <div class="sidebar" id="sidebar">
            <h3>Navigation</h3>
            <a href="/Learners/Index">Manage Learners</a>
            <a href="/Instructors/Index">Manage Instructors</a>
            <a href="/Notifications">Notifications</a>
            <a href="/Reports">Reports</a>
            <a href="/Personalization/Index">Manage Personalization Profiles</a>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <h1>Welcome, @Model.AidNavigation.Username!</h1>
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Quick Actions</h5>
                    <p class="card-text">Use the sidebar to navigate through various admin tools and settings.</p>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Recent Activity</h5>
                    <p class="card-text">No new notifications. Stay tuned for updates.</p>
                </div>
            </div>
        </div>
    </div>
    <!-- Add Delete Quest Link -->
    <div class="card">
        <h5>Manage Quests</h5>
        <a class="nav-link" href="@Url.Action("DeleteQuestsByCriterion", "Quest")">Delete Quests by Criterion</a>
    </div>

    <div class="card">
        <h5>Create a Discussion Forum</h5>
        <a href="@Url.Action("CreateForum", "DiscussionRooms")" class="btn btn-primary">Create New Forum</a>
    </div>

    <!-- Footer -->
    <div class="footer">
        <p>Admin Panel - Powered by Discord Theme</p>
    </div>

    <script>
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            sidebar.classList.toggle('hidden');
        }
    </script>
</body>
</html>
