@{
    ViewData["Title"] = "Add Learning Goal";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    @* Include the necessary CSS for your project *@
    <link rel="stylesheet" href="~/css/style.css"> <!-- Your custom CSS file -->

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        /* Dark mode styles for the page */
        body {
            background-color: #2f3136; /* Dark background similar to Discord */
            color: #ffffff; /* White text for contrast */
            font-family: 'Arial', sans-serif;
        }

        .container {
            max-width: 600px;
            margin: auto;
        }

        .form-container {
            background-color: #353940; /* Dark background for the form */
            border-radius: 10px;
            padding: 30px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        h2 {
            color: #ffffff;
            text-align: center;
            margin-bottom: 30px;
        }

        .form-group label {
            font-weight: bold;
            color: #b9bbbe; /* Light gray for label text */
        }

        .form-group input {
            background-color: #444950; /* Darker input background */
            border: 1px solid #5a6268;
            color: #fff;
            padding: 10px;
            border-radius: 8px;
        }

        .form-group input:focus {
            outline: none;
            border-color: #7289da; /* Discord blue when focusing input */
            background-color: #3e444d;
        }

        .btn-primary {
            background-color: #7289da; /* Discord blue */
            border: none;
            padding: 12px;
            width: 100%;
            border-radius: 8px;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

        .btn-primary:hover {
            background-color: #5e73b3; /* Slightly darker on hover */
        }

        .alert {
            margin-top: 20px;
        }

        /* Smooth transition for form elements */
        .form-group input,
        .btn-primary {
            transition: all 0.3s ease;
        }

    </style>
</head>
<body>
    <div class="container my-5">
        <div class="form-container">
            <h2>@ViewData["Title"]</h2>

            @* Display any error messages *@
            @if (ViewData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewData["ErrorMessage"]
                </div>
            }

            <form method="post" action="@Url.Action("AddGoal", "Learners")">
                @Html.AntiForgeryToken()  <!-- This adds the anti-forgery token to the form -->

                <div class="form-group mb-3">
                    <label for="goalId">Goal ID</label>
                    <input type="number" class="form-control" id="goalId" name="GoalId" required>
                </div>
                <div class="form-group mb-3">
                    <label for="description">Description</label>
                    <input type="text" class="form-control" id="description" name="Description" required>
                </div>
                <div class="form-group mb-3">
                    <label for="deadline">Deadline</label>
                    <input type="date" class="form-control" id="deadline" name="Deadline" required>
                </div>

                <button type="submit" class="btn btn-primary">Add Goal</button>
            </form>
        </div>
    </div>

    @* Include JS scripts if needed *@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
