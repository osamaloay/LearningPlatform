@model WebApplicationProject.Models.QuestParticipantsViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        /* Discord-inspired color scheme */
        body {
            background-color: #2f3136; /* Dark background like Discord */
            color: #e0e0e0; /* Light text color */
            font-family: 'Arial', sans-serif;
        }

        h1, h2 {
            color: #7289da; /* Discord blue */
        }

        .card {
            background-color: #36393f; /* Card background in dark mode */
            border: none;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.5);
            margin-bottom: 20px;
        }

        .card h5 {
            background-color: #7289da; /* Discord blue header */
            color: #fff;
            padding: 10px;
            border-radius: 8px 8px 0 0;
        }

        .card p {
            padding: 15px;
            color: #e0e0e0;
        }

        .btn {
            font-weight: bold;
            border-radius: 5px;
            transition: background 0.3s ease;
        }

        .btn-info {
            background-color: #0099ff; /* Info blue button */
            color: #fff;
            border: none;
        }

        .btn-info:hover {
            background-color: #007acc;
        }

        .text-danger {
            color: #e60000; /* Red color for no participants */
        }

        .participants-list {
            list-style-type: none;
            padding-left: 0;
        }

        .participants-list li {
            background-color: #2f3136;
            border-radius: 8px;
            margin-bottom: 10px;
            padding: 10px;
            color: #fff;
            font-size: 16px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .card-footer {
            background-color: #2f3136;
            color: #b9bbbe;
            padding: 10px;
            border-top: 1px solid #444;
            text-align: center;
        }
    </style>
</head>
<body>

    <div class="container mt-4">
        <h1>Participants of the Quest: @Model.Quest.Title</h1>

        <!-- Display Quest Details -->
        <div class="card">
            <div class="card-body">
                <h5>@Model.Quest.Title</h5>
                <p><strong>Description:</strong> @Model.Quest.Description</p>
                <p><strong>Difficulty Level:</strong> @Model.Quest.DifficultyLevel</p>
            </div>
        </div>

        <!-- Display List of Participants -->
        <h2>Participants</h2>
        @if (Model.Participants != null && Model.Participants.Any())
        {
            <ul class="participants-list">
                @foreach (var participant in Model.Participants)
                {
                    <li>
                        <span>@participant.Fname @participant.Lname</span>  <!-- Display participant's name -->
                        <a href="@Url.Action("ViewProfile", "Learners", new { learnerId = participant.Sid })" class="btn btn-info btn-sm">View Profile</a>
                    </li>
                }
            </ul>
        }
        else
        {
            <p class="text-danger">No participants found for this quest.</p>
        }
    </div>

</body>
</html>
