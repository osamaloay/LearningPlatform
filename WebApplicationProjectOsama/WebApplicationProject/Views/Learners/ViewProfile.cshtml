@model WebApplicationProject.Models.LearnerProfileTempModel

<!-- Dark theme profile page -->
<div class="container mt-5">
    <h1 class="text-center text-white">Profile of @Model.Fname @Model.Lname</h1>

    <div class="card bg-dark text-white border-0 shadow-lg">
        <div class="card-body">
            <h5 class="card-title text-center">@Model.Fname @Model.Lname's Profile</h5>

            <!-- Profile Information -->
            <div class="row mb-3">
                <div class="col-md-6">
                    <p><strong>Country:</strong> @Model.Country</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Email:</strong> @Model.Email</p>
                </div>
            </div>

            <!-- Display Profile Image -->
            @if (!string.IsNullOrEmpty(Model.ProfileImageUrl))
            {
                <div class="text-center">
                    <h5>Profile Image</h5>
                    <div class="profile-image-container">
                        <img src="@Model.ProfileImageUrl" alt="Profile Image" />


                    </div>
                </div>
            }
            else
            {
                <div class="text-center">
                    <p>No profile image uploaded.</p>
                </div>
            }

            <!-- Edit Button -->
            <div class="text-center mt-4">
                <a href="@Url.Action("EditInfo", "Learners")" class="btn btn-primary">Edit Profile</a>
            </div>
        </div>
    </div>
</div>

<!-- Custom CSS -->
<style>
    body {
        background-color: #2f3136; /* Dark background similar to Discord */
        color: #dcddde; /* Light text for contrast */
    }

    .card {
        background-color: #36393f; /* Dark card background */
        border-radius: 8px;
    }

    .btn-primary {
        background-color: #7289da; /* Discord blue */
        border-color: #7289da;
    }

        .btn-primary:hover {
            background-color: #5b6eae; /* Darker blue when hovered */
            border-color: #5b6eae;
        }

    .text-center p {
        color: #b9bbbe; /* Slightly muted text for message */
    }

    /* Enlarged profile image styling */
    .profile-image-container {
        width: 250px; /* Larger container for the image */
        height: 250px;
        margin: 0 auto; /* Center align */
        border: 4px solid #7289da; /* Border similar to Discord theme */
        border-radius: 50%; /* Circular shape */
        overflow: hidden; /* Crop the image if necessary */
    }

    .profile-image {
        width: 100%; /* Fit the container */
        height: 100%; /* Maintain proportions */
        object-fit: cover; /* Ensure the image is scaled correctly */
    }
</style>
