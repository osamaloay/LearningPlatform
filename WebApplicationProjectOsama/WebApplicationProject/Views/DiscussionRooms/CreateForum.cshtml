@{
    ViewData["Title"] = "Create Discussion Forum";
}

<!-- Full-page Background -->
<div class="background-overlay">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow-lg border-0 rounded-lg">
                    <div class="card-header text-center bg-dark text-light">
                        <h2>Create New Discussion Forum</h2>
                    </div>
                    <div class="card-body">
                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger">
                                @TempData["ErrorMessage"]
                            </div>
                        }

                        <form asp-action="CreateForum" method="post">
                            <!-- Module ID -->
                            <div class="form-group mb-4">
                                <label for="ModuleId" class="text-light">Module ID</label>
                                <input type="number" id="ModuleId" name="moduleId" class="form-control" required />
                            </div>

                            <!-- Course ID -->
                            <div class="form-group mb-4">
                                <label for="CourseId" class="text-light">Course ID</label>
                                <input type="number" id="CourseId" name="courseId" class="form-control" required />
                            </div>

                            <!-- Forum Title -->
                            <div class="form-group mb-4">
                                <label for="Title" class="text-light">Forum Title</label>
                                <input type="text" id="Title" name="title" class="form-control" required />
                            </div>

                            <!-- Description -->
                            <div class="form-group mb-4">
                                <label for="Description" class="text-light">Description</label>
                                <textarea id="Description" name="description" class="form-control" rows="5" required></textarea>
                            </div>

                            <!-- Submit Button -->
                            <button type="submit" class="btn btn-primary btn-block mb-4">Create Forum</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Styling for Dark and Busy Design -->
<style>
    /* Full background with dark overlay */
    .background-overlay {
        background: linear-gradient(to right, #2a2d37, #23262f);
        background-size: cover;
        background-position: center;
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        position: absolute;
        width: 100%;
        top: 0;
        left: 0;
        padding: 0;
    }

    .card {
        background-color: #2f3136;
        color: #ffffff;
        border-radius: 20px; /* Rounded corners for a more modern look */
        border: none;
        overflow: hidden;
        min-height: 500px; /* Ensure the card is larger */
        padding: 30px;
    }

    .card-header {
        background-color: #23262f;
        color: #ffffff;
        padding: 30px;
        text-align: center;
        border-radius: 20px 20px 0 0; /* Rounded top corners */
    }

    .card-body {
        padding: 30px;
    }

    .form-group label {
        color: #b5b8bb;
        font-size: 16px;
    }

    .form-control {
        background-color: #36393f;
        border: 1px solid #7289da;
        color: #ffffff;
        font-size: 16px;
        border-radius: 10px;
        padding: 15px;
    }

        .form-control:focus {
            border-color: #7289da;
            box-shadow: 0 0 8px #7289da;
        }

    .btn-primary {
        background-color: #7289da;
        border-radius: 5px;
        padding: 15px;
        color: #fff;
        font-weight: bold;
        border: none;
        transition: background-color 0.3s ease;
        font-size: 18px;
    }

        .btn-primary:hover {
            background-color: #5a6eb1;
        }

    .alert {
        background-color: #ff4b69;
        color: white;
        padding: 15px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        margin-bottom: 20px;
    }

    .alert-danger {
        background-color: #ff4b69; /* Red for errors */
    }
</style>
