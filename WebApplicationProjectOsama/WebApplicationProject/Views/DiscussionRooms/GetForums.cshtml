@model IEnumerable<WebApplicationProject.Models.DisscussionForum>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Discussion Forums</title>
    <style>
        /* General Styling */
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            color: #fff;
            background-color: #36393f;
        }

        .discord-layout {
            display: flex;
            height: 100vh;
        }

        /* Sidebar */
        .sidebar {
            width: 250px;
            background-color: #2f3136;
            display: flex;
            flex-direction: column;
        }

        .server-header {
            padding: 20px;
            text-align: center;
            background-color: #202225;
            font-size: 18px;
            font-weight: bold;
            border-bottom: 1px solid #444;
        }

        .server-list {
            flex-grow: 1;
            overflow-y: auto;
        }

        .server-item {
            display: flex;
            align-items: center;
            padding: 10px;
            margin: 5px 10px;
            background-color: #36393f;
            border-radius: 8px;
            transition: background-color 0.3s;
        }

        .server-item:hover {
            background-color: #42454a;
        }

        .server-link {
            text-decoration: none;
            color: inherit;
            display: flex;
            align-items: center;
            width: 100%;
        }

        .server-icon img {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            margin-right: 10px;
        }

        .server-info {
            display: flex;
            flex-direction: column;
        }

        .server-title {
            font-size: 16px;
            font-weight: bold;
        }

        .server-description {
            font-size: 14px;
            color: #b9bbbe;
        }

        /* Chat Window */
        .chat-window {
            flex-grow: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #36393f;
            color: #b9bbbe;
            text-align: center;
        }

        .chat-placeholder h2 {
            font-size: 24px;
            margin-bottom: 10px;
        }

        .chat-placeholder p {
            font-size: 16px;
        }
    </style>
</head>
<body>
    <div class="discord-layout">
        <!-- Sidebar (Server List) -->
        <div class="sidebar">
            <div class="server-header">
                <h3>Discussion Servers</h3>
            </div>
            <div class="server-list">
                @foreach (var forum in Model)
                {
                    <div class="server-item">
                        <a href="@Url.Action("ForumRoom", "DiscussionRooms", new { forumId = forum.ForumId })" class="server-link">
                            <div class="server-icon">
                                <img src="https://via.placeholder.com/40" alt="server-icon" />
                            </div>
                            <div class="server-info">
                                <h4 class="server-title">@forum.Title</h4>
                                <p class="server-description">@forum.Description</p>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>

        <!-- Chat Window -->
        <div class="chat-window">
            <div class="chat-placeholder">
                <h2>Welcome to the Forums!</h2>
                <p>Select a discussion server to join and start chatting!</p>
            </div>
        </div>
    </div>
</body>
</html>
